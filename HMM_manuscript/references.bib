	number = {4},
	journal = {Microbiology Spectrum},
	author = {Trémeaux, Pauline and Latour, Justine and Ranger, Noémie and Ferrer, Vénicia and Harter, Agnès and Carcenac, Romain and Boyer, Pauline and Demmou, Sofia and Nicot, Florence and Raymond, Stéphanie and Izopet, Jacques},
