	pmcid = {PMC10434069},
	keywords = {co-infection, Coinfection, COVID-19, genomic surveillance, Humans, long-read sequencing, Pandemics, quasispecies, recombination, Recombination, Genetic, SARS-CoV-2},
	pages = {e0049323},
	file = {Full Text PDF:/Users/nobumasaki/Zotero/storage/QDNI43QT/Trémeaux et al. - 2023 - SARS-CoV-2 Co-Infections and Recombinations Identified by Long-Read Single-Molecule Real-Time Sequen.pdf:application/pdf},
