	month = mar,
	year = {2021},
	pmid = {33743803},
	pmcid = {PMC7980745},
	keywords = {Genomics, Recombination, RNA virus, SARS-CoV-2},
	pages = {20},
	file = {Full Text:/Users/nobumasaki/Zotero/storage/BTC5KRLZ/Chrisman et al. - 2021 - Indels in SARS-CoV-2 occur at template-switching hotspots.pdf:application/pdf},
}

@article{tremeaux_sars-cov-2_2023,
